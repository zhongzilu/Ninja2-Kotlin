<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/preference_category_text_size"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/preference_title_preview"
        android:textSize="18sp" />

    <WebView
        android:id="@+id/mWebViewDemo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/mTextZoomLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preference_title_text_scale"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mTextZoomText"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mTextZoomLabel"
            android:text="100%" />

        <zzl.kotlin.ninja2.widget.ZSeekBar
            android:id="@+id/mTextZoomSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mTextZoomLabel"
            android:layout_toEndOf="@id/mTextZoomText"
            android:max="30"
            android:progress="10"
            app:min="50"
            app:step="5" />

    </RelativeLayout>

